# Development Dockerfile for AI Service
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    netcat-openbsd \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY apps/ai-service/requirements.txt .

# Install Python dependencies with better timeout and retry settings
RUN pip config set global.timeout 300 && \
    pip config set global.retries 5 && \
    pip install --no-cache-dir --timeout 300 -r requirements.txt

# Install development dependencies
RUN pip install --no-cache-dir --timeout 300 watchfiles

# Copy the application code
COPY apps/ai-service/ .

# Make entrypoint script executable
RUN chmod +x docker-entrypoint.sh

# Create a non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Expose the port
EXPOSE 8000

# Set entrypoint
ENTRYPOINT ["./docker-entrypoint.sh"]

# Run the application with auto-reload for development
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
