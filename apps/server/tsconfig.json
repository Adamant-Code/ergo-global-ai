{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "outDir": "./dist",
    "target": "ESNext",
    "rootDir": ".",
    "module": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "paths": {
      "@/*": ["./src/*"],
      "@/docs/*": ["./src/docs/*"],
      "@/model/*": ["./src/model/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/config/*": ["./src/config/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/errors/*": ["./src/errors/*"],
      "@/schemas/*": ["./src/schemas/*"],
      "@/middleware/*": ["./src/middleware/*"]
    }
  },
  "include": [
    "knex/**/*",
    "src/**/*",
    "bundleComponents.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
